@model Site.Models.PostResult
@{
    var wellExtraClass = Model != null ? Model.Success ? "bg-success" : "bg-warning" : "";
    var wellMessage = Model != null ? Model.Message : "<p>Obrigado pelo interesse em organizar um grupo para acompanhar o Summit!<p></p><p>Por favor, preencha o formulário abaixo e entraremos em contato!</p>";
}
<header class="not-home"></header>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="well @wellExtraClass">@Html.Raw(wellMessage)</div>
        <form class="form-horizontal" action="/home/newhost" method="post">
            <div class="form-group">
                <label class="col-md-4 control-label" for="autor">Seu nome</label>
                <div class="col-md-4">
                    <input id="autor" name="name" type="text" placeholder="Nome" class="form-control input-md" required="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="email">Seu e-mail</label>
                <div class="col-md-4">
                    <input id="email" name="email" type="text" placeholder="E-mail" class="form-control input-md" required="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="cidade">Cidade/UF</label>
                <div class="col-md-4">
                    <input id="cidade" name="city" type="text" placeholder="Cidade" class="form-control input-md" required="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for=""></label>
                <div class="col-md-4">
                    <div class="g-recaptcha" data-sitekey="6LfoWwsUAAAAAOMbCYy4wg6JwriOENgJgxeEB2IQ"></div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="enviar"></label>
                <div class="col-md-4">
                    <button id="enviar" name="enviar" class="btn btn-primary">Submeter</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts {
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script type="text/javascript">
        $(function () {
            $('#mainNav ul.nav').hide();

            $('form').on('submit', function (e) {
                var r = grecaptcha.getResponse();
                var valid = r != undefined && r != null && r != '';

                return valid;
            });
        });
    </script>
}